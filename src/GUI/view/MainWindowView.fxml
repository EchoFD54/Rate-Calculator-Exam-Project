<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.MainWindowController">
   <children>
      <Button layoutX="52.0" layoutY="14.0" mnemonicParsing="false" onAction="#openAddEmployee" text="New Employee" />
      <TableView fx:id="employeeTableView" layoutX="52.0" layoutY="58.0" prefHeight="520.0" prefWidth="304.0">
        <columns>
          <TableColumn fx:id="employeeNameColumn" prefWidth="167.0" text="Name" />
          <TableColumn fx:id="employeeTeamColumn" prefWidth="136.0" text="Team" />
        </columns>
      </TableView>
      <AnchorPane layoutX="407.0" layoutY="58.0" prefHeight="520.0" prefWidth="445.0">
         <children>
            <Label fx:id="employeeNameLbl" alignment="CENTER" layoutX="65.0" layoutY="28.0" prefHeight="58.0" prefWidth="325.0" text="Name">
               <font>
                  <Font size="40.0" />
               </font></Label>
            <Label fx:id="employeeCountryLbl" layoutX="201.0" layoutY="153.0" text="Country" />
         </children>
      </AnchorPane>
      <Button layoutX="224.0" layoutY="14.0" mnemonicParsing="false" onAction="#deleteEmployee" text="Delete Employee" />
   </children>
</AnchorPane>
