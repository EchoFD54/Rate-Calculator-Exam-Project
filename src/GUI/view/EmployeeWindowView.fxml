<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<!-- This VBox is a container for the GridPane which is needed for perimeter margins to exist -->
<VBox stylesheets="@Styles/employeeWindowView.css" xmlns="http://javafx.com/javafx/21.0.3" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.EmployeeWindowController">
    <GridPane hgap="10" vgap="10" gridLinesVisible="false">
        <VBox.margin>
            <Insets top="20" right="20" bottom="20" left="20" />
        </VBox.margin>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <!--  Schneider logo -->
       <VBox GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="0">
           <HBox>
               <ImageView fitHeight="140.0" pickOnBounds="true" preserveRatio="true">
                   <Image url="@Images/FullLogo.png" />
               </ImageView>
           </HBox>
           <HBox prefHeight="100.0"/>
       </VBox>

        <!-- Employee search -->
        <VBox GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1">
            <HBox prefHeight="10"/>
            <HBox>
                <HBox prefWidth="5"/>
                <TextField fx:id="searchTextField"/>
                <HBox prefWidth="5"/>
                <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#toggleFilter">Search</Button>
            </HBox>
            <HBox prefHeight="10"/>
        </VBox>

        <!-- Employee table -->
        <VBox GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="2" >
            <TableView fx:id="employeeTableView">
                <columns>
                    <TableColumn fx:id="employeeNameColumn" text="Employees" minWidth="360" prefWidth="360" />
                </columns>
            </TableView>
            <HBox prefHeight="50"/>

            <!--Buttons New Employee   -->
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="3">
                <HBox prefWidth="170"/>
                <Button mnemonicParsing="false" onAction="#openAddEmployee">New Employee</Button>
            </HBox>
        </VBox>

        <!-- Employee Name -->
        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="100">
            <Label fx:id="employeeNameLbl" text="Select Employee to View Info" minWidth="100"/>
        </VBox>

        <!-- Employee profile information -->
        <VBox GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="2">
            <GridPane hgap="100.0" vgap="15.0">

                <!-- Vertical headers -->
                <Label
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Country"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Teams"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Annual Salary"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Overhead Multiplier (%)"
                    GridPane.rowIndex="4"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Fixed Annual Amount"
                    GridPane.rowIndex="5"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Annual Eff. Working Hours"
                    GridPane.rowIndex="6"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Daily Working Hours"
                    GridPane.rowIndex="7"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Utilization (%)"
                    GridPane.rowIndex="8"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Hourly Rate"
                    GridPane.rowIndex="9"
                    GridPane.columnIndex="0"
                />
                <Label
                    styleClass="vertical-header"
                    text="Daily Rate"
                    GridPane.rowIndex="10"
                    GridPane.columnIndex="0"
                />

                <!-- Data column -->
                <Label
                    fx:id="employeeBooleanLbl"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="employeeCountryLbl"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="employeeTeamLbl"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="employeeAnnSalLbl"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="employeOverMultLbl"
                    GridPane.rowIndex="4"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="employeeFixAmtLbl"
                    GridPane.rowIndex="5"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="employeeEffectHoursLbl"
                    GridPane.rowIndex="6"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="employeeDailyHourLbl"
                    GridPane.rowIndex="7"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="employeeUtilizationLbl"
                    GridPane.rowIndex="8"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="hourRateLbl"
                    GridPane.rowIndex="9"
                    GridPane.columnIndex="1"
                />
                <Label
                    fx:id="dailyRateLbl"
                    GridPane.rowIndex="10"
                    GridPane.columnIndex="1"
                />
            </GridPane>
        </VBox>

        <!-- Markup + GM calculator -->
        <VBox GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="3">
            <HBox prefHeight="45.0" prefWidth="374.0" spacing="20.0">
                <Label alignment="CENTER" text="Markup" styleClass="vertical-header"/>
                <TextField fx:id="markupTextField" alignment="CENTER" prefHeight="30.0" prefWidth="70.0" />
                <HBox prefWidth="10"/>
                <Label alignment="CENTER" text="GM" styleClass="vertical-header" />
                <TextField fx:id="gmTextField" alignment="CENTER" prefHeight="30.0" prefWidth="70.0" />
            </HBox>
            <HBox prefHeight="20.0">
                <Label fx:id="employeeCostLbl" text="Cost" styleClass="vertical-header" />
                <HBox prefWidth="160"/>
                <Label fx:id="employeeRevenueLbl" text="Revenue" styleClass="vertical-header"/>
            </HBox>

            <!--Calculator Button -->
                <HBox prefHeight="50"/>
                <Button mnemonicParsing="false" onAction="#calculateCostAndRevenue" text="Calculate"/>
        </VBox>

        <!--Buttons New Team/Add/Remove Teams   -->
        <VBox GridPane.columnIndex="2" GridPane.rowIndex="1">
            <HBox>
                <HBox prefWidth="80"/>
                <Button id="new-team-button" mnemonicParsing="false" onAction="#openAddTeam">New Team</Button>
                <HBox prefWidth="62"/>
                <Button id="add-to-team-button" mnemonicParsing="false" onAction="#addToTeamBtn">Add to Team</Button>
                <HBox prefWidth="5"/>
                <Button id="remove-from-team-button" mnemonicParsing="false" onAction="#removeEmployeeFromTeamBtn">Remove from team</Button>
            </HBox>
        </VBox>

        <!-- Teams table -->
        <VBox GridPane.columnIndex="2" GridPane.columnSpan="1" GridPane.rowIndex="2" minWidth="600">
            <TableView fx:id="teamsTableView" prefHeight="473.0" >
                <columns>
                    <TableColumn fx:id="teamNameColumn" minWidth="250" text="Teams" />
                    <TableColumn fx:id="teamEmployeesColumn" minWidth="250" text="Employees" />
                    <TableColumn fx:id="teamDailyRateColumn" minWidth="100" text="Team Daily Rate" />
                </columns>
            </TableView>
        </VBox>

        <!-- Country table -->
        <TableView fx:id="countriesTableView" prefHeight="300.0" minWidth="600.0" GridPane.columnIndex="2" GridPane.columnSpan="1" GridPane.rowIndex="3">
            <columns>
                <TableColumn fx:id="countryNameColumn" minWidth="200" text="Country" />
                <TableColumn fx:id="countryEmployeesColumn" minWidth="200" text="Employees" />
                <TableColumn fx:id="countryDailyRateColumn" minWidth="200" text="Country Daily Rate" />
            </columns>
        </TableView>
    </GridPane>
</VBox>